<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="3.1.0.583944" />  
  </ItemGroup>
  <Target Name="CopyApk" BeforeTargets="Build">
    <PropertyGroup>
      <AndroidApkFile>$(OutputPath)com.xamarin.android.lite.apk</AndroidApkFile>
    </PropertyGroup>
    <Copy SourceFiles="..\Xamarin.Android.Lite\bin\Release\com.xamarin.android.lite.apk" DestinationFiles="$(AndroidApkFile)" SkipUnchangedFiles="True" />
  </Target>
  <Import Project="..\bin\$(Configuration)\Xamarin.Android.Lite.targets" />
</Project>